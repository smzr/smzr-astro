---
import Layout from "../layouts/Layout.astro";
import sammyImage from "../images/sammy.jpg";
---
<Layout title="home" description="Sammy McKay">
	<section class="hero">
        <div class="container">
            <div class="content flow">
                <h1>
                    <span>Hello, I am</span>
                    Sammy
                </h1>
                <p>A full-stack developer, with over 4 years professional experience engineering tailored solutions.</p>
            </div>
            <div class="image">
                <img src={sammyImage} alt="Hero Image">
                <a class="marquee-wrapper" href="https://www.youtube.com/watch?v=Vhh_GeBPOhs">
                    <div class="marquee">
                        <div class="marquee__content">
                            <div class="text">Developers!</div>
                            <div class="clap">üëè</div>
                            <div class="text">Developers!</div>
                            <div class="clap">üëè</div>
                            <div class="text">Developers!</div>
                            <div class="clap">üëè</div>
                        </div>
                        <div class="marquee__content" aria-hidden="true">
                            <div class="text">Developers!</div>
                            <div class="clap">üëè</div>
                            <div class="text">Developers!</div>
                            <div class="clap">üëè</div>
                            <div class="text">Developers!</div>
                            <div class="clap">üëè</div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </section>
</Layout>
<style lang="scss">
    .hero {
        position: relative;
        overflow-x: hidden;
        padding: 3rem 0;

        &::before {
            position: absolute;
            z-index: -1;
            content: "";
            top: 0;
            bottom: 0;
            width: 150%;
            left: -25%;
            background: linear-gradient(83.21deg,#FF0F7B 0%,#F89B29 100%);
            -webkit-mask-image: radial-gradient(rgba(0,0,0,.45),transparent 70%);
            mask-image: radial-gradient(rgba(0,0,0,.45),transparent 70%);
        }

        .container {
            max-width: 1080px;
            margin: auto;
            display: grid;
            grid-template-columns: 1fr;
            gap: 2rem 4rem;
            padding: 0 2rem;
        }

        .content {
            h1 {
                font-size: clamp(5rem, 1.3333rem + 10.6667vw, 8rem);
                line-height: 1.2;

                span {
                    display: block;
                    font-size: .25em;
                    font-family: 'Montserrat', sans-serif;
                    font-weight: 400;
                    margin-bottom: .5rem;
                }
            }

            p {
                font-size: 1.25rem;
                max-width: 32ch;
            }
        }

        .image {
            overflow: hidden;
            position: relative;
            border-radius: 999px 999px 0 0;
            max-width: 445px;
            aspect-ratio: 2 / 3;
            margin: auto;

            .marquee-wrapper {
                display: block;
                position: absolute;
                max-width: 100%;
                bottom: 0;
                padding: 2rem 0 1.8rem;
                backdrop-filter: blur(6px);
                background: rgba(255, 255, 255, 0.02);
                text-align: center;
                transition:  300ms ease-in-out;

                &:hover {
                    text-decoration: none;
                    background: rgba(255, 255, 255, 0.05);
                }

                &::before {
                    content: '';
                    position: absolute;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    background-image: radial-gradient(circle farthest-corner at 50% 50%, rgba(0, 0, 0, 0) 64%, #000);
                    z-index: 2;
                }
            }

            img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transform: scale(1.1);
            }
        }

        @media (min-width: 768px) {
            .container {
                display: flex;
                align-items: center;
                justify-content: space-between;

                .content {
                    max-width: 50%;
                }
            }
        }
    }
</style>
        </div>
        <div class="autoplay-progress">
            <svg viewBox="0 0 48 48">
              <circle cx="24" cy="24" r="20"></circle>
            </svg>
            <span></span>
        </div>
    </div>
</div>
<style lang="scss">
    .swiper {
		border: 1px solid #3E362F;
        user-select: none;
    }

    .swiper-slide{
        position: relative;
        width: 100%;

        img {
            aspect-ratio: 16/9;
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: 50% 0%;
        }
    }

    .top-bar {
		background-color: #0B120D;
        padding: 6px 8px;
        display: flex;
        justify-content: center;

        a.url {
            font-family: 'IBM Plex Mono', monospace;
            color: #FCD2A4;
            font-size: 12px;
            text-transform: lowercase;
        }

        a.icon {
            position: absolute;
            top: 0;
            right: 8px;
            padding: 2px;

            svg {
                fill: #FCD2A4;
            }
        }
    }

    .autoplay-progress {
        position: absolute;
        right: 16px;
        bottom: 16px;
        z-index: 10;
        width: 40px;
        height: 40px;
        background-color: #0B120D;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 14px;
        font-family: 'IBM Plex Mono', monospace;
        color: var(--swiper-theme-color);
    }

    .autoplay-progress svg {
        --progress: 0;
        position: absolute;
        left: 0;
        top: 0px;
        z-index: 10;
        width: 100%;
        height: 100%;
        stroke-width: 2px;
        stroke: var(--swiper-theme-color);
        fill: none;
        stroke-dashoffset: calc(125.6px * (1 - var(--progress)));
        stroke-dasharray: 125.6;
        transform: rotate(-90deg);
    }
    
    .controls {
        position: absolute;
        top: 9px;
        left: 8px;
        display: flex;
        gap: .5rem;
    }

    .swiper-button-prev,
    .swiper-button-next {
        position: relative;
        inset: auto;
        margin: 0;
        width: 12px;
        padding: 2px;
        height: auto;

        &::after {
            content: none;
        }
    }
</style>
---
import 'swiper/swiper-bundle.css';
import { Image } from 'astro:assets';
import italiaconti from '../assets/projects/italiaconti.jpg';
import pecorino from '../assets/projects/pecorino.jpg';
import newforest from '../assets/projects/newforest.jpg';
import radar from '../assets/projects/radar.jpg';
import lukeandsammie from '../assets/projects/lukeandsammie.jpg';
---
<div class="projects-image">
    <div class="swiper">
        <div class="controls">
            <div class="swiper-button-prev">
                <svg width="8" height="8" viewBox="0 0 8 8" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M8 3.5V4.5H2V5.5H1V4.5H0V3.5H1V2.5H2V3.5H8ZM3 1.5H2V2.5H3V1.5ZM3 1.5H4V0.5H3V1.5ZM3 6.5H2V5.5H3V6.5ZM3 6.5H4V7.5H3V6.5Z" fill="#FCD2A4"/>
                </svg>
            </div>
            <div class="swiper-button-next">
                <svg width="8" height="8" viewBox="0 0 8 8" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M0 3.5V4.5H6V5.5H7V4.5H8V3.5H7V2.5H6V3.5H0ZM5 1.5H6V2.5H5V1.5ZM5 1.5H4V0.5H5V1.5ZM5 6.5H6V5.5H5V6.5ZM5 6.5H4V7.5H5V6.5Z" fill="#FCD2A4"/>
                </svg>
            </div>
        </div>
        <div class="swiper-wrapper">
            <div class="swiper-slide">
                <div class="top-bar">
                    <a href="https://www.italiaconti.com" class="url">italiaconti.com</a>
                    <a href="https://www.italiaconti.com" class="icon">
                        <svg width="10" height="10" viewBox="0 0 10 10" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M9.5 4.5V0.5H5.5V1.5H7.5V2.5H6.5V3.5H5.5V4.5H4.5V5.5H3.5V6.5H4.5V5.5H5.5V4.5H6.5V3.5H7.5V2.5H8.5V4.5H9.5ZM4.5 1.5H0.5V9.5H8.5V5.5H7.5V8.5H1.5V2.5H4.5V1.5Z" fill="#FCD2A4"/>
                        </svg>
                    </a>
                </div>
                <Image src={italiaconti} alt="Italia Conti" />
            </div>
            <div class="swiper-slide">
                <div class="top-bar">
                    <a href="https://pecorinoitalian.co.uk/" class="url">pecorinoitalian.co.uk</a>
                    <a href="https://pecorinoitalian.co.uk/" class="icon">
                        <svg width="10" height="10" viewBox="0 0 10 10" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M9.5 4.5V0.5H5.5V1.5H7.5V2.5H6.5V3.5H5.5V4.5H4.5V5.5H3.5V6.5H4.5V5.5H5.5V4.5H6.5V3.5H7.5V2.5H8.5V4.5H9.5ZM4.5 1.5H0.5V9.5H8.5V5.5H7.5V8.5H1.5V2.5H4.5V1.5Z" fill="#FCD2A4"/>
                        </svg>
                    </a>
                </div>
                <Image src={pecorino} alt="Pecorino" />
            </div>
            <div class="swiper-slide">
                <div class="top-bar">
                    <a href="https://www.newforestactivities.co.uk/" class="url">newforestactivities.co.uk</a>
                    <a href="https://www.newforestactivities.co.uk/" class="icon">
                        <svg width="10" height="10" viewBox="0 0 10 10" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M9.5 4.5V0.5H5.5V1.5H7.5V2.5H6.5V3.5H5.5V4.5H4.5V5.5H3.5V6.5H4.5V5.5H5.5V4.5H6.5V3.5H7.5V2.5H8.5V4.5H9.5ZM4.5 1.5H0.5V9.5H8.5V5.5H7.5V8.5H1.5V2.5H4.5V1.5Z" fill="#FCD2A4"/>
                        </svg>
                    </a>
                </div>
                <Image src={newforest} alt="New Forest Activities" />
            </div>
            <div class="swiper-slide">
                <div class="top-bar">
                    <a href="https://www.radarfestival.co.uk/" class="url">radarfestival.co.uk</a>
                    <a href="https://www.radarfestival.co.uk/" class="icon">
                        <svg width="10" height="10" viewBox="0 0 10 10" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M9.5 4.5V0.5H5.5V1.5H7.5V2.5H6.5V3.5H5.5V4.5H4.5V5.5H3.5V6.5H4.5V5.5H5.5V4.5H6.5V3.5H7.5V2.5H8.5V4.5H9.5ZM4.5 1.5H0.5V9.5H8.5V5.5H7.5V8.5H1.5V2.5H4.5V1.5Z" fill="#FCD2A4"/>
                        </svg>
                    </a>
                </div>
                <Image src={radar} alt="RADAR Festival" />
            </div>
            <div class="swiper-slide">
                <div class="top-bar">
                    <a href="https://lukeandsammie.com/" class="url">lukeandsammie.com</a>
                    <a href="https://lukeandsammie.com/" class="icon">
                        <svg width="10" height="10" viewBox="0 0 10 10" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M9.5 4.5V0.5H5.5V1.5H7.5V2.5H6.5V3.5H5.5V4.5H4.5V5.5H3.5V6.5H4.5V5.5H5.5V4.5H6.5V3.5H7.5V2.5H8.5V4.5H9.5ZM4.5 1.5H0.5V9.5H8.5V5.5H7.5V8.5H1.5V2.5H4.5V1.5Z" fill="#FCD2A4"/>
                        </svg>
                    </a>
                </div>
                <Image src={lukeandsammie} alt="Luke and Sammie" />
            </div>
        </div>
    </div>
</div>
<style lang="scss">
    .swiper {
		border: 1px solid #3E362F;
        user-select: none;
    }

    .swiper-slide{
        position: relative;
        width: 100%;

        img {
            aspect-ratio: 16/9;
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: 50% 0%;
        }
    }

    .top-bar {
		background-color: #0B120D;
        padding: 6px 8px;
        display: flex;
        justify-content: center;

        a.url {
            font-family: 'IBM Plex Mono', monospace;
            color: #FCD2A4;
            font-size: 12px;
            text-transform: lowercase;
        }

        a.icon {
            position: absolute;
            top: 0;
            right: 8px;
            padding: 2px;

            svg {
                fill: #FCD2A4;
            }
        }
    }
    
    .controls {
        position: absolute;
        top: 9px;
        left: 8px;
        display: flex;
        gap: .5rem;
    }

    .swiper-button-prev,
    .swiper-button-next {
        position: relative;
        inset: auto;
        margin: 0;
        width: 12px;
        padding: 2px;
        height: auto;

        &::after {
            content: none;
        }
    }
</style>
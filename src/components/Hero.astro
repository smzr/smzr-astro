---
import { Image } from 'astro:assets';
import sammy from '../assets/sammy.jpg';
---
<div class="hero-freelance">
  <!-- Background gradient + vignette -->
  <div class="background-layer">
    <div class="gradient-orange"></div>
    <div class="gradient-yellow"></div>
    <div class="vignette"></div>
  </div>

  <!-- Simple top nav -->
  <header class="top-nav">
    <a href="#" class="logo-link">
      <span class="logo-mark">
        <Image
          src={sammy}
          width={32}
          height={32}
          loading="eager"
          alt="Sammy McKay"
        />
      </span>
      <span class="logo-text">Sammy McKay</span>
    </a>
    <nav class="nav-links">
      <a class="nav-link" href="#work">Work</a>
      <a class="nav-link" href="#services">Services</a>
      <a class="nav-link" href="#about">About</a>
      <a class="nav-link" href="#contact">Contact</a>
    </nav>
    <a href="#contact" class="hire-button">Hire me</a>
  </header>

  <!-- Hero -->
  <section class="hero-section">
    <div class="hero-content">
      <!-- Availability pill -->
      <a href="#contact" class="availability-pill">
        <span class="status-dot"></span>
        Now booking Q4 2025
        <span class="arrow" aria-hidden="true">→</span>
      </a>

      <h1 class="hero-title">
        Your tech partner for
        <span class="gradient-text">websites, systems & IT support</span>
      </h1>

      <p class="hero-description">
        Helping businesses in Chichester and the surrounding areas work smarter with websites, automation, and system integrations. Everything you need to keep things running smoothly.
      </p>

      <div class="hero-actions">
        <a href="#contact" class="primary-button">
          Start a project →
        </a>
        <a href="#work" class="secondary-button">
          View my work
        </a>
      </div>
    </div>
  </section>
</div>
<style>
    .hero-freelance {
        position: relative;
        isolation: isolate;
        overflow: hidden;
        background: #0D1F1B;
        color: white;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    /* Background gradient + vignette */
    .background-layer {
        pointer-events: none;
        position: absolute;
        inset: 0;
        z-index: -10;
    }

    .gradient-orange {
        position: absolute;
        inset: 0;
        background: radial-gradient(1200px 600px at 70% 20%, #FF7A1A 0%, transparent 60%);
        opacity: 0.6;
    }

    .gradient-yellow {
        position: absolute;
        inset: 0;
        background: radial-gradient(900px 400px at 20% 60%, #FFB347 0%, transparent 60%);
        opacity: 0.4;
    }

    .vignette {
        position: absolute;
        inset: 0;
        background: radial-gradient(circle at center,transparent 60%,#061309 100%), linear-gradient(to bottom,transparent 75%,#061309 100%);
    }

    /* Simple top nav */
    .top-nav {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        z-index: 10;
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 100%;
        max-width: 1280px;
        margin: 0 auto;
        padding: 1.5rem;
    }

    .logo-link {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        text-decoration: none;
        color: inherit;
    }

    .logo-mark {
        display: inline-flex;
        height: 2rem;
        width: 2rem;
        border-radius: 0.5rem;
        background: rgba(255, 255, 255, 0.1);
        box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        overflow: hidden;
    }

    .logo-mark img {
        height: 100%;
        width: 100%;
        object-fit: cover;
    }

    .logo-text {
        font-weight: 600;
        letter-spacing: -0.025em;
    }

    .nav-links {
        display: none;
        gap: 2rem;
        font-size: 0.875rem;
        line-height: 1.5;
        color: rgba(255, 255, 255, 0.7);
    }

    .nav-link {
        color: inherit;
        text-decoration: none;
        transition: color 150ms ease;
    }

    .nav-link:hover {
        color: white;
    }

    .hire-button {
        display: none;
        align-items: center;
        border-radius: 9999px;
        background: white;
        padding: 0.5rem 1rem;
        font-size: 0.875rem;
        font-weight: 500;
        color: #0b0b1b;
        text-decoration: none;
        transition: background-color 150ms ease;
    }

    .hire-button:hover {
        background: rgba(255, 255, 255, 0.9);
    }

    @media (min-width: 768px) {
        .nav-links {
            display: flex;
        }

        .hire-button {
            display: inline-flex;
        }
    }

    /* Hero */
    .hero-section {
        width: 100%;
        max-width: 1280px;
        margin: 0 auto;
        padding: 1.5rem 1.5rem 5rem;
    }

    @media (min-width: 768px) {
        .hero-section {
            padding: 2.5rem 1.5rem 7rem;
        }
    }

    @media (min-width: 1024px) {
        .hero-section {
            padding: 2.5rem 1.5rem 8rem;
        }
    }

    .hero-content {
        max-width: 56rem;
        margin: 0 auto;
        text-align: center;
    }

    /* Availability pill */
    .availability-pill {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        border-radius: 9999px;
        background: rgba(255, 255, 255, 0.1);
        padding: 0.25rem 0.75rem;
        font-size: 0.75rem;
        font-weight: 500;
        color: rgba(255, 255, 255, 0.8);
        border: 1px solid rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(4px);
        text-decoration: none;
        transition: background-color 150ms ease;
    }

    .availability-pill:hover {
        background: rgba(255, 255, 255, 0.15);
    }

    .status-dot {
        display: inline-flex;
        height: 0.5rem;
        width: 0.5rem;
        border-radius: 50%;
        background: #10b981;
    }

    .arrow {
        transition: transform 150ms ease;
    }

    .availability-pill:hover .arrow {
        transform: translateX(2px);
    }

    .hero-title {
        margin-top: 1.5rem;
        font-size: clamp(3rem, 8vw, 4.5rem);
        font-weight: 800;
        line-height: 1.2;
        text-wrap: balance;
    }

    .gradient-text {
        background: linear-gradient(to right, #FC4A1A, #F7B733);
        background-clip: text;
        -webkit-background-clip: text;
        color: transparent;
    }

    .hero-description {
        margin: 1.5rem auto 0;
        text-balance: balance;
        font-size: 1rem;
        color: rgba(255, 255, 255, 0.7);
        line-height: 1.55;
        text-wrap: balance;
    }

    @media (min-width: 768px) {
        .hero-description {
            font-size: 1.125rem;
        }
    }

    .hero-actions {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        margin-top: 2rem;
    }

    @media (min-width: 640px) {
        .hero-actions {
            flex-direction: row;
        }
    }

    .primary-button {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        border-radius: 9999px;
        background: white;
        padding: 0.75rem 1.25rem;
        font-size: 0.875rem;
        font-weight: 600;
        color: #0b0b1b;
        box-shadow: 0 1px 2px 0 rgb(0 0 0 / 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        text-decoration: none;
        transition: background-color 150ms ease;
    }

    .primary-button:hover {
        background: rgba(255, 255, 255, 0.9);
    }

    .secondary-button {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        border-radius: 9999px;
        background: rgba(255, 255, 255, 0.1);
        padding: 0.75rem 1.25rem;
        font-size: 0.875rem;
        font-weight: 600;
        color: white;
        border: 1px solid rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(4px);
        text-decoration: none;
        transition: background-color 150ms ease;
    }

    .secondary-button:hover {
        background: rgba(255, 255, 255, 0.15);
    }
</style>